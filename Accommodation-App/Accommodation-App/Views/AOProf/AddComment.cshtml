@model Accommodation_App.Models.Property

@{
    ViewBag.Title = "AddComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Comment of Rejected Property</h2>

@using (Html.BeginForm("AddComment", "AOProf", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Property @ViewData["id"]</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.UAOComment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.UAOComment, "", new { @class = "text-danger" })
                @Html.TextAreaFor(model => model.UAOComment, new { htmlAttributes = new { @class = "form-control" }, @cols = 10, @rows = 10 })
            </div>
        </div>

        <div>
            <input type="hidden" value='@ViewData["id"]' name="ProId" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>

    </div>
}

