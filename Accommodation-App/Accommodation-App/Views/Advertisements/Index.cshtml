
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model List<Accommodation_App.Models.Property>
<head>
    <meta charset="utf-8">
    <title>All Advertisements</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/bootstrap.js"></script>

</head>
<body>
   
    <div class="container">
        <h2>All Advertisements</h2>
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Property Type</th>
                <th>Description</th>
                <th>Price</th>
                <th>Rooms No.</th>
                <th>Address</th>
                <th></th>
            </tr>

            @foreach (var p in Model)
            {
                <tr>
                    <td> @p.Name </td>
                    <td> @p.Type</td>
                    <td> @p.Description </td>
                    <td> @p.RentPrice </td>
                    <td> @p.RoomNumber</td>
                    <td> @p.Address</td>
                    <td>
                        @Html.ActionLink("ViewAdvertisementDetails", "Advertisements", new { id = p.ProId })
                        
                    </td>
                </tr>
            }
        </table>
    </div>
   
                
                
               
</body>

